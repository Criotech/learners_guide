<!doctype html>
<html lang="en">
<head>
    <%- include('../partials/dashboard-head', {pagename: 'Add/Edit Video'}) %>
</head>

<body>
    <%- include('../partials/dashboard-nav') %>

    <div class="container-fluid">
        <div class="row">
            <%- include('../partials/sidebar.ejs', {page: 'Video'}) %>

            <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-5 pb-2 mb-3">
                   <h1 class="h2 rw"><%= (typeof action != 'undefined') ? 'Edit' : 'Create' %> Page Content: <span class="text-info">Video</span></h1>
                </div>

                <form action="/dashboard/videos/add" method="post" enctype="multipart/form-data" class="col-lg-10 col-md-10 col-sm-10 col-xs-10">

                    <%- include('../fields/text', { fieldname: 'title', fieldlabel: 'Video Title', valueField: (typeof result != 'undefined') ? result.title : '' }); %>

                    <hr class="my-4"/>
                    <%- include('../fields/file', { fieldname: 'postImage', fieldlabel: 'Video Image', valueField: (typeof result != 'undefined') ? result.VideoImage : '' }); %>

                    
                    <hr class="my-4"/>
                    <%- include('../fields/text', { fieldname: 'link', fieldlabel: 'Video Link', valueField: (typeof result != 'undefined') ? result.title : '' }); %>
                   
                    <hr class="my-4"/>
                    <%- include('../fields/textarea', { fieldname: 'summary', fieldId: 'summary', fieldlabel: 'Summary', valueField: (typeof result != 'undefined') ? result.summary : '' }); %>

                    <hr class="my-4"/>
                    <%- include('../fields/textarea', { fieldname: 'videolink', fieldId: 'videolink', fieldlabel: 'Embbed Video', valueField: (typeof result != 'undefined') ? result.content : '' }); %>

                    <hr class="my-4"/>
                    <div class="col-sm-10 ml-md-auto px-0">
                        <%- include('../fields/button', { fieldvalue: (typeof action != 'undefined') ? 'UPDATE Video' : 'CREATE VIDEO' }); %>
                        <a href="/dashboard/videos" class="btn btn-success pull-right"><i class="fa fa-caret-left pr-2"> </i>Back to List</a>
                    </div>
                </form>
            </main>
        </div>
    </div>

    <%- include('../partials/dashboard-scripts') %>
    <script type="text/javascript">
        CKbasic('summary');
        CKfull('content');
        CKbasic('meta_desc');
    </script>
</body>
</html>
